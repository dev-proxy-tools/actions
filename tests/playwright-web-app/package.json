{
  "name": "playwright-web-app",
  "version": "1.0.0",
  "description": "A web application to demonstrate Dev Proxy integration with Playwright for end-to-end testing",
  "main": "server.js",
  "scripts": {
    "start": "npx http-server -c-1 -p 3000 ./public",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "install:msedge": "npx playwright install msedge"
  },
  "dependencies": {},
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}